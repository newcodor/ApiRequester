<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.newcodor.apirequester.UI.HeaderController">
    <children>
        <FlowPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <FlowPane prefHeight="25.0">
                    <children>
                        <Label text="Name:">
                            <FlowPane.margin>
                                <Insets right="5.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="headerName" prefHeight="23.0" prefWidth="100.0">
                            <FlowPane.margin>
                                <Insets right="5.0" />
                            </FlowPane.margin>
                        </TextField>
                        <Label text="Value:">
                            <FlowPane.margin>
                                <Insets right="5.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="headerValue" prefHeight="23.0" prefWidth="100.0">
                            <FlowPane.margin>
                                <Insets right="20.0" />
                            </FlowPane.margin>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#addHeaderToTableView" prefHeight="23.0" prefWidth="55.0" text="Add" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </FlowPane>
            </children>
        </FlowPane>
        <Separator prefWidth="250.0" />
        <FlowPane prefHeight="576.0" prefWidth="410.0">
            <children>
                <TableView fx:id="headersTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="356.0" prefWidth="400.0">
                    <columns>
                        <TableColumn id="Name" prefWidth="120.0" sortable="false" text="Name" />
                        <TableColumn id="Value" prefWidth="279.0" sortable="false" text="Value" />
                    </columns>
                </TableView>
                <Button alignment="TOP_CENTER" mnemonicParsing="false" onAction="#deleteHeaderFromTableView" prefHeight="23.0" prefWidth="60.0" text="Delete">
                    <FlowPane.margin>
                        <Insets left="5.0" />
                    </FlowPane.margin>
                </Button>
            </children>
        </FlowPane>
    </children>
</VBox>
